{
  "compilerOptions": {
    "target": "es5", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "strict": true, // Enable all strict type-checking options
    "jsx": "react", // Specify JSX code generation
    "esModuleInterop": true, // Emit additional JS for CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "outDir": "dist", // Output directory for compiled files
    "declaration": true, // Generate .d.ts files
    "sourceMap": true // Generate source maps
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "example" // Exclude the example directory
  ]
}
